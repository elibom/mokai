<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mokai-parent</artifactId>
		<groupId>org.mokai</groupId>
		<version>0.11.7-SNAPSHOT</version>
	</parent>
	
	<artifactId>mokai-boot</artifactId>
	
	<name>Mokai Boot</name>
	<description>Mokai Boot Module</description>
	
	<dependencies>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.apache.xbean</groupId>
			<artifactId>xbean-spring</artifactId>
			<version>3.7</version>
		</dependency>
		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-web-admin</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<!-- Provided connectors - only for testing -->
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-jetty</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-http</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-smpp</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-mail</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.mokai</groupId>
			<artifactId>mokai-mail</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
	
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
         		<artifactId>maven-jar-plugin</artifactId>
               	<configuration>
               		<excludes>
 						<exclude>log4j.properties</exclude>
               		</excludes>
               	</configuration>
           	</plugin>
		</plugins>
	</build>
	
</project>